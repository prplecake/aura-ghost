{
    "name": "aura",
    "description": "A very minimal Ghost theme.",
    "version": "0.1.0",
    "engines": {
        "ghost": ">=2.0.0",
        "ghost-api": "v2"
    },
    "license": "MIT",
    "author": {
        "name": "Matthew Jorgensen",
        "email": "matthew@jrgnsn.net",
        "url": "https://jrgnsn.net"
    },
    "keywords": [
        "ghost-theme",
        "ghost",
        "theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://git.sr.ht/~mjorgensen/aura"
    },
    "config": {
        "posts_per_page": 5,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        }
    }
}
